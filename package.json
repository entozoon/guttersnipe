{
  "name": "guttersnipe",
  "private": false,
  "version": "0.1.35",
  "type": "module",
  "bin": {
    "guttersnipe-api": "node ./api/server.cjs"
  },
  "scripts": {
    "start": "npm-run-all -p start:*",
    "start:ui": "vite preview ./ui --open",
    "start:api": "node ./api/server.cjs",
    "dev": "npm-run-all -p dev:*",
    "dev:ui": "vite ./ui --open",
    "dev:api": "nodemon ./api/server.ts",
    "build": "npm-run-all -p build:*",
    "build:ui": "tsc --p ./ui && vite build ./ui",
    "build:api": "tsc --p ./api",
    "cmop": "git add --all; git commit -m \"Early package dev..\"; npm version patch; git push; npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^4.18.2",
    "livereload": "^0.9.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "vite": "^4.1.0"
  },
  "devDependencies": {
    "@types/connect-livereload": "^0.6.0",
    "@types/express": "^4.17.17",
    "@types/livereload": "^0.9.2",
    "@types/node": "^18.13.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "@preact/preset-vite": "^2.5.0"
  }
}
