{
  "name": "guttersnipe",
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "bin": {
    "guttersnipe-api": "./api/dist/server.cjs"
  },
  "scripts": {
    "start": "npm-run-all -p start:*",
    "start:ui": "vite ./ui --open --clearScreen false",
    "start:api": "node ./api/dist/server.cjs",
    "dev-example": "FORCEDIR=/../guttersnipe-example npm run dev",
    "dev": "npm-run-all -p dev:*",
    "dev:ui": "vite ./ui --open --clearScreen false",
    "dev:api-build": "tsc --p ./api --watch",
    "dev:api-serve": "nodemon --watch ../guttersnipe/api/dist/ --ext *.cjs --exec npm run start:api",
    "build": "npm-run-all -p build:*",
    "build:ui": "tsc --p ./ui && vite build ./ui",
    "build:api": "tsc --p ./api",
    "cmop": "git add --all; git commit -m \"Early package dev..\"; npm version patch; git push; npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@react-hook/async": "^3.1.1",
    "connect-livereload": "^0.6.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ky": "^0.33.2",
    "livereload": "^0.9.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "react-fetch-hook": "^1.9.5",
    "react-router-dom": "^6.8.1",
    "vite": "^4.1.1"
  },
  "devDependencies": {
    "@types/connect-livereload": "^0.6.0",
    "@types/express": "^4.17.17",
    "@types/livereload": "^0.9.2",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "@preact/preset-vite": "^2.5.0"
  }
}
