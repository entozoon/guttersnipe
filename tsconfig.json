{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "es5", "dom", "dom.iterable"],
    "declaration": false, // Set outDir as cms dir
    "outDir": "./cms/dist",
    "removeComments": true,
    "downlevelIteration": true,
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  // Set rootDir as cms folder
  "include": ["./cms/src/**/*"],
  "exclude": ["node_modules"]
}
